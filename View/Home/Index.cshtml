@{
    ViewData["Title"] = "Social Hub";
}

<h2>@ViewData["Title"]</h2>

<div id="postsContainer">
    <!-- Lista de posts -->
</div>

<!-- FormulÃ¡rio para adicionar um novo post -->
<button onclick="showAddPostForm()">Postar</button>

<div id="addPostForm" style="display:none;">
    <h3>Poste algo interessante!</h3>
    <form id="postForm">
        <textarea id="content" placeholder="Digite seu post..." required></textarea>
        <button type="button" onclick="addPost()">Postar</button>
        <button type="button" onclick="hideAddPostForm()">Cancelar</button>
    </form>
</div>

